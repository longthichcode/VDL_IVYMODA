<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_dialog_filter">

    <!-- Header -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:gravity="center_vertical">
        <ImageView android:layout_width="24dp" android:layout_height="24dp"
            android:src="@drawable/ic_search" android:layout_marginEnd="8dp"/>
        <TextView android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content" android:text="Bộ lọc"
            android:textSize="18sp" android:textStyle="bold"/>
        <ImageView android:id="@+id/ivClose" android:layout_width="24dp"
            android:layout_height="24dp" android:src="@drawable/ic_close"
            android:clickable="true" android:focusable="true"/>
    </LinearLayout>

    <!-- CHỌN MÀU: GRID 2 CỘT -->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Chọn màu" android:textStyle="bold"
        android:layout_marginTop="16dp" android:layout_marginBottom="8dp"/>

    <GridLayout
        android:id="@+id/gridColorsFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false" />

    <!-- CHỌN SIZE -->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Chọn size" android:textStyle="bold"
        android:layout_marginTop="16dp" android:layout_marginBottom="8dp"/>

    <!-- 2 CỘT SIZE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Cột 1: Size số -->
        <LinearLayout
            android:id="@+id/layoutSizeNumber"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="16dp"/>

        <!-- Cột 2: Size chữ -->
        <LinearLayout
            android:id="@+id/layoutSizeLetter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </LinearLayout>

    <!-- NÚT LỌC -->
    <Button
        android:id="@+id/btnApplyFilter"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="LỌC"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#000000"
        android:layout_marginTop="24dp"/>
</LinearLayout>